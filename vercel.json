{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "functions": {
    "api/**/*": {
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}